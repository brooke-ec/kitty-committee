---
import "greset";
import "../styles/global.scss";

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Crest from "../assets/crest.png";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Kitty Committee</title>
		<meta property="og:title" content="Kitty Committee" />
		<meta property="og:description" content="Kitty Committee is a Free Company of Miqo'te (and other races)." />
		<meta property="og:image" content={Crest.src} />
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
