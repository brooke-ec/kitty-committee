---
import { Image } from "astro:assets";
import CREST from "../assets/crest.png";
---

<nav>
	<div class="container">
		<Image src={CREST} alt="company crest" width="50" loading="eager" />
		<h1>Kitty Committee</h1>
	</div>
</nav>

<style lang="scss">
	nav {
		position: sticky;
		z-index: 10;
		top: 0px;

		background-color: #1b1b1b;
		padding: 0 var(--page-margin);
	}

	.container {
		padding: 15px 0;

		display: flex;
		align-items: center;
		gap: 1rem;
	}

	h1 {
		font-weight: normal;
		font-size: 35px;
	}
</style>
